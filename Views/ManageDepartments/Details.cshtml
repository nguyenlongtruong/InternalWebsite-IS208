@model WebsiteNoiBoCongTy.Models.Department

@{
    ViewData["Title"] = "Chi tiết Phòng ban";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1>Chi tiết Phòng ban</h1>
    <hr />

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông tin Phòng ban</h4>
            <dl class="row">
                <dt class="col-sm-2">Tên phòng ban</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.DepartmentId" class="btn btn-primary">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

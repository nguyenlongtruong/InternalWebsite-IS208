@model WebsiteNoiBoCongTy.Models.Meeting

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <style>
        .meeting-details-card {
            margin-top: 20px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }
        .meeting-details-card .card-header {
            font-weight: bold;
            font-size: 1.5rem;
            background-color: #e9f2fb;
            border-bottom: none;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 15px;
        }
        .meeting-details-card .card-body {
            font-size: 1rem;
            background-color: #ffffff;
            padding: 20px;
        }
        .meeting-details-card .card-footer {
            font-size: 0.9rem;
            color: #6c757d;
            background-color: #f7f9fc;
            border-top: none;
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
            padding: 15px;
        }
        .meeting-details-card dt {
            font-weight: bold;
        }
        .back-link {
            text-decoration: none;
            color: #007bff;
        }
        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="card meeting-details-card">
            <div class="card-header">
                Chi tiết cuộc họp
            </div>
            <div class="card-body">
                <dl class="row">
                     <dt class="col-sm-3">Chủ đề</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

                   <dt class="col-sm-3">Thời gian bắt đầu</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTime)</dd>

                    <dt class="col-sm-3">Thời gian kết thúc</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.EndTime)</dd>

                    <dt class="col-sm-3">Phòng</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Room.RoomCode)</dd>

                     <dt class="col-sm-3">Phòng ban</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Department.Name)</dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a class="back-link" asp-action="Index">Quay lại</a>
            </div>
        </div>
    </div>
</body>

@model WebsiteNoiBoCongTy.Models.Meeting

@{
    ViewData["Title"] = "Xóa cuộc họp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1>Xóa cuộc họp</h1>
    <h3>Bạn có chắc chắn muốn xóa cuộc họp này?</h3>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin cuộc họp</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Chủ đề:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Subject)</dd>
                        <dt class="col-sm-4">Thời gian bắt đầu:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.StartTime)</dd>
                        <dt class="col-sm-4">Thời gian kết thúc:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EndTime)</dd>
                        <dt class="col-sm-4">Phòng họp:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Room.RoomCode)</dd>
                        <dt class="col-sm-4">Phòng ban:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Department.Name)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

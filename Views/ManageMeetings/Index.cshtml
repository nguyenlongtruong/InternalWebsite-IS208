@model IEnumerable<WebsiteNoiBoCongTy.Models.Meeting>

@{
    ViewData["Title"] = "Lịch họp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1>Quản lý lịch họp</h1>

    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Tạo mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Chủ đề</th>
                    <th scope="col">Thời gian bắt đầu</th>
                    <th scope="col">Thời gian kết thúc</th>
                    <th scope="col">Phòng họp</th>
                    <th scope="col">Phòng ban</th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                        <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                        <td>@Html.DisplayFor(modelItem => item.Room.RoomCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department.Name)</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Sửa</a>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i> Chi tiết</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

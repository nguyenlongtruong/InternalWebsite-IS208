@model IEnumerable<WebsiteNoiBoCongTy.Models.Account>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">Quản lý tài khoản</h1>

    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Tạo mới</a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Họ và tên</th>
                <th>Giới tính</th>
                <th>Ngày sinh</th>
                <th>Vị trí</th>
                <th>Ảnh đại diện</th>
                <th>Số điện thoại</th>
                <th>Phòng ban</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.Fullname</td>
                    <td>@item.Gender</td>
                    <td>@item.Birthday.ToString("dd/MM/yyyy")</td>
                    <td>@item.Position</td>
                    <td>
                        <img src="@item.PhotoURL" alt="Avatar nhân viên" class="img-thumbnail" style="width:50px; height:50px;">
                    </td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Department?.Name</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.AccountId"><i class="fas fa-edit"></i> Sửa</a>
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.AccountId"><i class="fas fa-info-circle"></i> Chi tiết</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AccountId"><i class="fas fa-trash-alt"></i> Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model WebsiteNoiBoCongTy.Models.Room

@{
    ViewData["Title"] = "Tạo Phòng mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1>Tạo Phòng mới</h1>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoomCode" class="control-label">Mã phòng</label>
                    <input asp-for="RoomCode" class="form-control" />
                    <span asp-validation-for="RoomCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Tạo mới</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model WebsiteNoiBoCongTy.Models.Room

@{
    ViewData["Title"] = "Xóa Phòng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1>Xóa Phòng</h1>
    <h3>Bạn có chắc muốn xóa phòng này?</h3>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin phòng</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Mã phòng</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.RoomCode)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@model WebsiteNoiBoCongTy.Models.Notification

@{
    ViewData["Title"] = "Chi tiết thông báo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteNoiBoCongTy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteNoiBoCongTy.styles.css" asp-append-version="true" />
    <link href="~/css/styles.min.css" rel="stylesheet" />
    <style>
        .notification-details-card {
            margin-top: 20px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }
        .notification-details-card .card-header {
            font-weight: bold;
            font-size: 1.5rem;
            background-color: #e9f2fb;
            border-bottom: none;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 15px;
        }
        .notification-details-card .card-body {
            font-size: 1rem;
            background-color: #ffffff;
            padding: 20px;
        }
        .notification-details-card .card-footer {
            font-size: 0.9rem;
            color: #6c757d;
            background-color: #f7f9fc;
            border-top: none;
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
            padding: 15px;
        }
        .notification-details-card dt {
            font-weight: bold;
        }
        .back-link {
            text-decoration: none;
            color: #007bff;
        }
        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="card notification-details-card">
            <div class="card-header">
                Chi tiết thông báo
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Tiêu đề</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-sm-3">Nội dung</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                    <dt class="col-sm-3">Ngày đăng</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.PublishDate)</dd>

                    <dt class="col-sm-3">Người đăng</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Fullname)</dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a class="back-link" asp-action="Index">Quay lại</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/app.min.js"></script>
    <link href="~/css/styles.min.css" rel="stylesheet" />
</body>
</html>
